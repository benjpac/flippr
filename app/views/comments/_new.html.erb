<h3>Add Comment</h3>

<% if @comment.errors.any? %>
  <h3>Oops there were some errors. Please try again:</h3>
  <ul>
    <% @comment.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= bootstrap_form_for @comment, :url => photo_comments_path(@photo) do |f| %>
  <%= f.text_field :content %>
  <%= f.submit %>
<% end %>