<h3>Add Comment</h3>

<% if @comment.errors.any? %>
  <h3>Oops there were some errors. Please try again:</h3>
  <ul>
    <% @comment.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= bootstrap_form_for @comment, :url => photo_comments_path(@photo) do |f| %>
  <%= f.form_group :rating, label: { text: "Rating" } do %>
    <%= f.radio_button :rating, 1, label: "1 Ugly. Ugly ugly. " %>
    <%= f.radio_button :rating, 2, label: "2 You could do better. We're talking about flipper, here" %>
    <%= f.radio_button :rating, 3, label: "3 Meh", checked: true %>
    <%= f.radio_button :rating, 4, label: "4 That's a Decent Dolphin!" %>
    <%= f.radio_button :rating, 5, label: "5 The best!!!!!" %>
  <% end %>
  <%= f.text_field :content %>
  <%= f.submit %>
<% end %>